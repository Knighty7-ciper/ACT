{
  "openapi": "3.1.0",
  "info": {
    "title": "African Currency Platform API",
    "version": "1.0.0",
    "description": "API documentation for African Currency Exchange Platform"
  },
  "servers": [{ "url": "http://localhost:3001" }],
  "paths": {
    "/auth/register": {"post": {"summary": "Register", "responses": {"201": {"description": "Created"}}}},
