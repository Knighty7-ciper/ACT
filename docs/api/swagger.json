    "/users": {"get": {"summary": "List users", "responses": {"200": {"description": "OK"}}}},
    "/users/{id}": {"get": {"summary": "Get user", "parameters": [{"name":"id","in":"path","required":true,"schema":{"type":"string"}}], "responses": {"200": {"description": "OK"}}}},
    "/wallets": {"get": {"summary": "List wallets", "responses": {"200": {"description": "OK"}}}},
    "/transactions": {"post": {"summary": "Create transaction", "responses": {"201": {"description": "Created"}}}},
    "/exchange-rates": {"get": {"summary": "List exchange rates", "responses": {"200": {"description": "OK"}}}},
    "/countries": {"get": {"summary": "List countries", "responses": {"200": {"description": "OK"}}}},
    "/currencies": {"get": {"summary": "List currencies", "responses": {"200": {"description": "OK"}}}},
    "/news": {"get": {"summary": "List news", "responses": {"200": {"description": "OK"}}}},
    "/admin": {"get": {"summary": "List admins", "responses": {"200": {"description": "OK"}}}}
  }
